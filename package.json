{
  "name": "tldl_server",
  "version": "1.0.0",
  "description": "Another server for another app",
  "main": "server/main.js",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "dev": "nodemon",
    "build": "npm-run-all clean & babel ./server --out-dir build --ignore ./node_modules",
    "start": "npm run build && NODE_ENV=production&& SECRET=hjaksdabnasd456asdkjkdsajjjja0&& node ./build/main.js",
    "clean": "rm -rf build",
    "watch:dev": "npm-run-all build && babel-node ./build/main.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.4",
    "@babel/node": "^7.10.4",
    "@babel/preset-env": "^7.10.3",
    "axios": "^0.21.0",
    "babel-loader": "^6.2.0",
    "babel-preset-es2015": "^6.3.13",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "chalk": "^4.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-jwt": "^5.3.3",
    "get-audio-duration": "^2.0.3",
    "get-form-data": "^3.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.7",
    "mongoose": "^5.9.12",
    "node-aplay": "^1.0.3",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "python-shell": "^2.0.3",
    "rootpath": "^0.1.2",
    "socket.io": "^2.3.0",
    "socketio-jwt": "^4.5.0"
  },
  "devDependencies": {},
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": true
        }
      ]
    ]
  },
  "nodemonConfig": {
    "env": {
      "NODE_ENV": "development"
    },
    "exec": "npm run watch:dev",
    "watch": [
      "./server/api/*",
      "./server/config/*",
      "./server/models/*",
      "./server/services/*",
      "./server/utils/*",
      "./server/main.js"
    ],
    "ignore": [
      "**/node_modules/**",
      "**/.idea/**",
      "*.test.js",
      "*.spec.js"
    ]
  }
}
